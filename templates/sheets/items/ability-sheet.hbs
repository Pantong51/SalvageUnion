<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1 class="equipmentname">
            <input name="name" type="text" value="{{item.name}}" placeholder="Name"/>
        </h1>
    </header>
    <div>
        <table>
            <tr>
                <lable>{{ localize "su.ability.cost" }}</lable>
            </tr>
            <tr>
                <td>
                    <input type="text" name="data.abilityCost" value={{data.data.abilityCost}} data-dtype="Number" placeholder="1"/>
                </td>
            </tr>
        </table>
        <textarea name = "data.description">{{data.data.description}}</textarea>
    </div>
</form>
